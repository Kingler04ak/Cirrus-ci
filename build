#!/bin/bash
cd /tmp/rom

. build/envsetup.sh
lunch lineage_TBX304-userdebug
export CCACHE_DIR=/tmp/ccache  ##use additional flags if you need(optional)
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 20G
ccache -o compression=true
ccache -z


up(){
        curl --upload-file $1 https://bashupload.com
}

make_metalava(){
        mka api-stubs-docs
        mka system-api-stubs-docs
        mka test-api-stubs-docs
}

make_rom(){
        mka bacon -j26
        zip=$(up out/target/product/TBX304/*zip) ##edit this change from miatoll---> /<your device codename>
        echo " "
        echo "$zip"
}

make_metalava
make_rom &
sleep 3200 && kill "$!"
